<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.RatingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="@string/rating_prompt"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="102dp" />

        <ImageButton
            android:id="@+id/good_rating_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/ic_round_button_green"
            android:baselineAligned="true"
            android:contentDescription="@string/thumb_up_rate_description"
            android:src="@drawable/ic_thumb_up_green_100dp"></ImageButton>

        <ImageButton
            android:id="@+id/bad_rating_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/ic_round_button_red"
            android:baselineAligned="true"
            android:contentDescription="@string/thumb_down_rate_description"
            android:src="@drawable/ic_thumb_down_red_100dp"></ImageButton>

        <Button
            android:id="@+id/skip_rating_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0"
            android:text="@string/skip_rating_button_text" />
    </LinearLayout>

</LinearLayout>